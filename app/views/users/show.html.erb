<% provide(:title, "#{@user.username}") %>

<div class="profile">
  <div class="row">
    <div class="col-sm-4">
      <h1><%= @user.username %></h1>
      <h4><%= @user.email %></h4>
    </div>
    <div class="col-sm-8">
      <h2>Events Joined</h2>
        <% @user.events.each do |event| %>
        <div class="event col-md-12" style="height: 274px;">
          <div class="row title-bar">
            <div class="col-xs-10">
              <h4><%= event.title %></h4>
            </div>
            <div class="col-xs-2">
              <h4><%= link_to "Show", event_path(event.id) %></h4>
            </div>
          </div>
          <div class="row content">
            <% if event.picture? %>
              <div class="event-image col-xs-5">
                <%= image_tag event.picture.url %>
              </div>
              <div class="body col-xs-6 col-xs-offset-1">
                <p><%= resume(event.body) %></p>
              </div>
            <% else %>
              <div class="body col-xs-12">
                <p><%= resume(event.body) %></p>
              </div>
            <% end %>
            </div>
            <div class="row details">
              <div class="col-md-6">
                <h4>
                  <%= event.date.to_s.split(" ")[0].split("-").reverse.join("/") %>
                  @ <%= event.location %>
                </h4>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
