<%= form_for(@event) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %><br />

  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control"  %><br />

  <%= f.label :date %>
  <%= f.date_select :date, class:"form-control" %><br /><br />

  <%= f.label :location %>
  <%= f.text_field :location, class:"form-control" %><br /><br />

  <%= f.file_field :picture, class: "form-control" %><br />

  <%= f.submit yield(:button_text), class: "form-control btn btn-success" %>

<% end %>
